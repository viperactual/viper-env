#!/usr/bin/env php
<?php

define('BIN_BASE', __DIR__);

if (file_exists(BIN_BASE . '/../../../autoload.php')) {
    require BIN_BASE . '/../../../autoload.php';
} else {
    require BIN_BASE . '/../vendor/autoload.php';
}

use Symfony\Component\Console\Application;
use Viper\ViperLab\Console\Interfaces\CommandInterface;

$app = new Application(CommandInterface::APP_NAME, CommandInterface::APP_VERSION);

$app->add(new \Viper\ViperLab\Console\EnvCommand);

$app->run();
